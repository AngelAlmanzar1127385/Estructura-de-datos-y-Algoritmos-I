#include <iostream>
using namespace std;

void trianguloRectanguloDerecha(int fila, int alturaTotal) {
   
    if (fila > alturaTotal) {
        return;
    }

    for (int i = 0; i < alturaTotal - fila; i++) {
        cout << " ";
    }

    for (int i = 0; i < fila; i++) {
        cout << "*";
    }

    cout << endl;

    trianguloRectanguloDerecha(fila + 1, alturaTotal);
}

void trianguloIsosceles(int fila, int alturaTotal) {
   
    if (fila > alturaTotal) {
        return;
    }

    for (int i = 0; i < alturaTotal - fila; i++) {
        cout << " ";
    }

    for (int i = 0; i < (2 * fila) - 1; i++) {
        cout << "*";
    }

    cout << endl;

    trianguloIsosceles(fila + 1, alturaTotal);
}

void trianguloIsoscelesInvertido(int fila, int alturaTotal) {
    
    if (fila < 1) {
        return;
    }

    for (int i = 0; i < alturaTotal - fila; i++) {
        cout << " ";
    }

    for (int i = 0; i < (2 * fila) - 1; i++) {
        cout << "*";
    }

    cout << endl;

    trianguloIsoscelesInvertido(fila - 1, alturaTotal);
}

int main() {

    int altura;
    cout << "Introduce la altura: ";
    cin >> altura;

    if (altura <= 0) return 1;

    cout << "Rectangulo\n";
    
    trianguloRectanguloDerecha(1, altura);

    cout << "\nIsosceles\n";
    
    trianguloIsosceles(1, altura);

    cout << "\nIsosceles Invertido\n";
    
    trianguloIsoscelesInvertido(altura, altura);

    return 0;
}
